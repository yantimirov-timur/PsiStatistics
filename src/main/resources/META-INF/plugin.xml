<idea-plugin>
    <id>psiStatisticCollector</id>
    <name>Psi Statistic</name>
    <vendor>Timur Yantimirov</vendor>

    <!-- Product and plugin compatibility requirements -->
    <!-- https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.lang</depends>
    <depends>org.jetbrains.kotlin</depends>

    <description>Plugin collect psi elements in .kt files</description>
    <extensions defaultExtensionNs="com.intellij">

    </extensions>
    <actions>
        <action id="PsiStatistics"
                class="PsiStatistics" text="ShowStat">
            <keyboard-shortcut keymap="$default" first-keystroke="ctrl Q" second-keystroke="ctrl U"/>
        </action>
    </actions>
</idea-plugin>
